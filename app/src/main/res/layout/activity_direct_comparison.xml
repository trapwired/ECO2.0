<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DirectComparison">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="335dp">

        <ImageView
            android:id="@+id/image_1c"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:contentDescription="@string/img_product"
            android:src="@drawable/aepfel_gold_kiss"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/image_2c"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:contentDescription="@string/img_product"
            android:src="@drawable/aepfel_gala_victor"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/image_3c"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:contentDescription="@string/img_product"
            android:src="@drawable/bananen"
            android:visibility="invisible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
